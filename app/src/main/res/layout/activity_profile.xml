<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.example.toeyf.hana.ProfileActivity">


    <ImageView
        android:id="@+id/profile_visit_user_image"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="40dp"
        android:elevation="5dp"
        android:src="@drawable/default_profile" />

    <TextView
        android:id="@+id/profile_visit_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_visit_user_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/kanit_light"
        android:text="ชื่อของผู้ใช้งาน"
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/profile_visit_user_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/profile_visit_username"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/kanit_light"
        android:text="สถานะของผู้ใช้งาน"
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        android:textSize="20sp" />

    <Button
        android:id="@+id/send_friend_request_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/decline_friend_request_button"
        android:layout_below="@+id/profile_visit_user_status"
        android:layout_marginTop="20dp"
        android:background="?android:attr/colorPrimaryDark"
        android:elevation="5dp"
        android:fontFamily="@font/kanit_light"
        android:text="ส่งคำขอเป็นเพื่อน"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="22sp" />


    <Button
        android:id="@+id/decline_friend_request_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/send_friend_request_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@android:color/holo_red_light"
        android:drawablePadding="20dp"
        android:elevation="5dp"
        android:fontFamily="@font/kanit_light"
        android:text="ปฏิเสธคำขอเป็นเพื่อน"
        android:textAlignment="center"
        android:textSize="22sp" />


</RelativeLayout>
