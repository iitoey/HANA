<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.toeyf.hana.StatusActivity">

    <include
        android:id="@+id/status_app_bar"
        layout="@layout/app_bar_layout">

    </include>

    <EditText
        android:id="@+id/status_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/status_app_bar"
        android:layout_marginTop="90dp"
        android:ems="10"
        android:hint="เปลี่ยนสถานะของคุณ"
        android:textColorHint="@color/cardview_light_background"
        android:inputType="textMultiLine"
        android:padding="30dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/send_friend_request_button"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/status_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        app:cardBackgroundColor="?android:attr/colorForeground"
        app:cardCornerRadius="25dp"
        app:cardElevation="5dp"
        app:contentPadding="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:autoSizeTextType="none"
                android:fontFamily="@font/kanit_light"
                android:text="บันทึกสถานะ"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
